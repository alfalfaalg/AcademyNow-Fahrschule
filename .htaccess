# ==========================================
# AcademyNow Fahrschule - URL Redirects & SEO
# ==========================================
# Hostinger Apache Server Configuration
# Version: 2025-10-29

# Enable RewriteEngine
RewriteEngine On
RewriteBase /

# ==========================================
# 1. HTTPS ERZWINGEN (Security First!)
# ==========================================
# Alle HTTP-Anfragen auf HTTPS umleiten
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ==========================================
# 2. WWW ENTFERNEN (Standardisierung ohne www)
# ==========================================
# www.academynow-fahrschule.de → academynow-fahrschule.de
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ==========================================
# 3. INDEX.HTML AUF / UMLEITEN
# ==========================================
# /index.html → /
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*)index\.html$ https://academynow-fahrschule.de/$1 [R=301,L,NE]

# ==========================================
# 4. TRAILING SLASHES BEI .HTML DATEIEN ENTFERNEN
# ==========================================
# /datenschutz.html/ → /datenschutz.html
RewriteCond %{REQUEST_URI} ^(.+)\.html/$
RewriteRule ^(.+)\.html/$ https://academynow-fahrschule.de/$1.html [R=301,L]

# ==========================================
# 5. URL-UMSCHREIBUNGEN FÜR SAUBERE URLS
# ==========================================
# Optional: /ueber-uns → /ueber-uns.html (falls gewünscht)
# Aktuell deaktiviert, da wir .html-Endungen beibehalten
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule ^([^\.]+)$ $1.html [NC,L]

# ==========================================
# 6. FEHLERSEITEN (Optional)
# ==========================================
# Eigene 404-Seite (falls vorhanden)
# ErrorDocument 404 /404.html

# Eigene 500-Seite (falls vorhanden)
# ErrorDocument 500 /500.html

# ==========================================
# 7. SICHERHEIT & PERFORMANCE
# ==========================================

# Verzeichnis-Listing deaktivieren
Options -Indexes

# MIME-Type Sniffing verhindern
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Gzip-Komprimierung aktivieren (für Performance)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Browser-Caching aktivieren (für Performance)
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML - 1 Stunde (häufige Updates)
  ExpiresByType text/html "access plus 1 hour"

  # CSS & JavaScript - 1 Woche
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
  ExpiresByType text/javascript "access plus 1 week"

  # Bilder - 1 Monat
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"

  # Fonts - 1 Jahr
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ==========================================
# 8. SPEZIELLE WEITERLEITUNGEN
# ==========================================
# Beispiel: Alte URLs auf neue umleiten (falls nötig)
# Redirect 301 /alte-seite.html /neue-seite.html

# ==========================================
# ENDE DER KONFIGURATION
# ==========================================
